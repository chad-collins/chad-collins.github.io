---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<p>&copy; {today.getFullYear()} {import.meta.env.SITE_TITLE || 'Chad Collins'}. All rights reserved.</p>
	</div>
</footer>
<style>
	footer {
		border-top: 1px solid rgb(var(--border-color));
		background: rgb(var(--bg-color));
		margin-top: 120px;
		transition: background-color 0.3s ease, border-color 0.3s ease;
		width: 100%;
	}
	
	.footer-content {
		padding: 40px 24px;
		text-align: center;
	}
	
	p {
		margin: 0;
		font-size: 0.9em;
		color: rgb(var(--gray));
	}
	
	@media (width <= 768px) {
		footer {
			margin-top: 80px;
		}

		.footer-content {
			padding: 30px 20px;
		}
	}

	@media (width >= 1025px) {
		.footer-content {
			text-align: left;
		}
	}
</style>
