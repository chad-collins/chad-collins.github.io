---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<p>&copy; {today.getFullYear()} {import.meta.env.SITE_TITLE || 'Chad Collins'}. All rights reserved.</p>
	</div>
</footer>
<style>
	footer {
		border-top: 1px solid var(--border-color);
		background: var(--bg-color);
		margin-top: 120px;
		transition: background-color 0.3s ease, border-color 0.3s ease;
	}
	
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 40px 24px;
		text-align: center;
	}
	
	p {
		margin: 0;
		font-size: 0.9em;
		color: rgb(var(--gray));
	}
	
	@media (max-width: 768px) {
		footer {
			margin-top: 80px;
		}
		
		.footer-content {
			padding: 30px 20px;
		}
	}
</style>
