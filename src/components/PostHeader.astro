---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
import Tag from "./Tag.astro";
import ReviewStars from "./ReviewStars.astro";
import type { ImageMetadata } from "astro";

type Props = {
	title: string;
	pubDate: Date;
	tags?: string[];
	type?: CollectionEntry<"posts">["data"]["type"];
	reviewImage?: ImageMetadata;
	rating?: number;
	creator?: string;
	releaseYear?: number;
};

const { title, pubDate, tags, type, reviewImage, rating, creator, releaseYear } = Astro.props;
---

<header>
	<h1>{title}</h1>
	<small><FormattedDate date={pubDate} /></small>
	
	{tags && tags.length > 0 && (
		<ul class="tags">
			{tags.map((tag) => (
				<li>
					<Tag name={tag} href={false} />
				</li>
			))}
		</ul>
	)}
	
	{type === "review" && reviewImage && (
		<div class="review-meta">
			<Image src={reviewImage} alt={title} width={120} class="review-image" />
			<div class="review-info">
				{creator && <p class="creator">{creator}</p>}
				{releaseYear && <p class="release-year">{releaseYear}</p>}
				{rating !== undefined && (
					<div class="rating">
						<ReviewStars rating={rating} />
					</div>
				)}
			</div>
		</div>
	)}
</header>

<style>
	header {
		margin-bottom: 2rem;
	}

	small {
		display: block;
		margin-bottom: 1rem;
		color: rgb(var(--gray));
		font-size: 0.875rem;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0 0 1.5rem 0;
	}

	.review-meta {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 1.5rem;
		align-items: start;
		margin-top: 1.5rem;
		padding-top: 1.5rem;
		border-top: 1px solid rgb(var(--border-color));
	}

	.review-image {
		width: 120px;
		height: auto;
	}

	.review-info {
		display: flex;
		flex-direction: column;
		
	}

	.creator,
	.release-year {
		margin: 0;
		font-size: 0.95rem;
	}

	.rating {
		font-size: 1.25rem;
	}

	@media (max-width: 600px) {
		.review-meta {
			grid-template-columns: 1fr;
		}

		.review-image {
			width: 100%;
			max-width: 200px;
		}
	}
</style>
