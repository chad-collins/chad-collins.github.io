---
interface Props {
	name: string;
	coverImage: {
		src: string;
		width: number;
		height: number;
	};
	date: Date;
	description: string;
	href: string;
}

const { name, coverImage, date, description, href } = Astro.props;
---

<a href={href} class="album-card">
	<div class="album-cover">
		<img 
			src={coverImage.src} 
			alt={name}
			width={coverImage.width}
			height={coverImage.height}
		/>
	</div>
	<div class="album-info">
		<h3>{name}</h3>
		<time datetime={date.toISOString()}>
			{date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
		</time>
		<p>{description}</p>
	</div>
</a>

<style>
	.album-card {
		display: block;
		text-decoration: none;
		color: inherit;
		border-radius: 8px;
		overflow: hidden;
		background: rgb(var(--card-bg);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		transition: transform 0.2s, box-shadow 0.2s;
	}
	
	.album-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
	}
	
	.album-cover img {
		width: 100%;
		height: auto;
		display: block;
	}
	
	.album-info {
		padding: 1rem;
	}
	
	.album-info h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.1rem;
		font-weight: 600;
	}
	
	.album-info time {
		display: block;
		font-size: 0.9rem;
		color: rgb(var(--text-muted);
		margin-bottom: 0.5rem;
	}
	
</style>