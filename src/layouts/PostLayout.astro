---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import CommentSection from "../components/CommentSection.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import PostHeader from "../components/PostHeader.astro";


type Props = CollectionEntry<"posts">["data"] & {
	breadcrumbs?: Array<{ label: string; href?: string }>;
};

const { 
	title, 
	description, 
	pubDate, 
	tags, 
	comments, 
	breadcrumbs,
	type,
	coverImage,
	rating,
	creator,
	releaseYear
} = Astro.props;
---

<BaseLayout title={title} description={description}>
	{breadcrumbs && <Breadcrumbs crumbs={breadcrumbs} />}
	
	<article id="post" class="prose">
		<PostHeader 
			title={title}
			pubDate={pubDate} 
			tags={tags}
			type={type}
			coverImage={coverImage}
			rating={rating}
			creator={creator}
			releaseYear={releaseYear}
		/>

			<slot/>

		
		{comments !== false && <CommentSection />}
	</article>
</BaseLayout>

<style>

.tags {
    display: flex;
    flex-wrap: wrap;
    flex-basis: auto;
    
}

.tags * {
    list-style: none; 
}

.prose {
    color: rgb(var(--text-color));
    font-size: 1.0625rem;
    line-height: 1.7;
    max-width: 65ch;
}

/* Headings */
.prose h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    margin-top: 2em;
    margin-bottom: 0.75em;
    letter-spacing: -0.02em;
}

.prose h2 {
    font-size: 1.625rem;
    font-weight: 700;
    line-height: 1.3;
    margin-top: 2em;
    margin-bottom: 0.75em;
    letter-spacing: -0.015em;
}

.prose h3 {
    font-size: 1.375rem;
    font-weight: 600;
    line-height: 1.4;
    margin-top: 1.75em;
    margin-bottom: 0.5em;
    letter-spacing: -0.01em;
}

.prose h4 {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.5;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
}

.prose h5,
.prose h6 {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.5;
    margin-top: 1.25em;
    margin-bottom: 0.5em;
}

/* Paragraphs */
.prose p {
    margin-top: 0;
    margin-bottom: 1.25em;
}

.prose p:last-child {
    margin-bottom: 0;
}

/* Links */
.prose a {
    color: rgb(var(--link-color));
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: opacity 0.2s;
}

.prose a:hover {
    opacity: 0.8;
}

/* Strong & Emphasis */
.prose strong {
    font-weight: 600;
    color: rgb(var(--text-color));
}

.prose em {
    font-style: italic;
}

/* Lists */
.prose ul,
.prose ol {
    margin-top: 0;
    margin-bottom: 1.25em;
    padding-left: 1.5em;
}

.prose ul {
    list-style-type: disc;
}

.prose ol {
    list-style-type: decimal;
}

.prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    line-height: 1.7;
}

.prose li>p {
    margin-bottom: 0.5em;
}

.prose ul ul,
.prose ul ol,
.prose ol ul,
.prose ol ol {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
}

/* Blockquotes */
.prose blockquote {
    font-style: italic;
    border-left: 3px solid rgb(var(--gray));
    padding-left: 1.25em;
    margin: 1.5em 0;
    color: rgb(var(--gray));
}

.prose blockquote p {
    margin-bottom: 0.75em;
}

/* Code */
.prose code {
    font-family: ui-monospace, SFMono-Regular, Monaco, 'Cascadia Code', 'Roboto Mono', Menlo, Consolas, monospace;
    font-size: 0.875em;
    background-color: rgb(var(--gray), 0.1);
    padding: 0.2em 0.4em;
    border-radius: 3px;
}

.prose pre {
    font-family: ui-monospace, SFMono-Regular, Monaco, 'Cascadia Code', 'Roboto Mono', Menlo, Consolas, monospace;
    font-size: 0.875em;
    line-height: 1.6;
    background-color: rgb(var(--gray), 0.05);
    border: 1px solid rgb(var(--gray), 0.2);
    border-radius: 6px;
    padding: 1em;
    margin: 1.5em 0;
    overflow-x: auto;
}

.prose pre code {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    font-size: 1em;
}

/* Horizontal Rule */
.prose hr {
    border: none;
    border-top: 1px solid rgb(var(--gray), 0.2);
    margin: 2.5em 0;
}

/* Images */
.prose img {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 1.5em 0;
}

/* Tables */
.prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5em 0;
    font-size: 0.9375em;
}

.prose th,
.prose td {
    padding: 0.75em 1em;
    text-align: left;
    border-bottom: 1px solid rgb(var(--gray), 0.2);
}

.prose th {
    font-weight: 600;
    background-color: rgb(var(--gray), 0.05);
}

/* First element spacing */
.prose>*:first-child {
    margin-top: 0;
}

/* Last element spacing */
.prose>*:last-child {
    margin-bottom: 0;
}
</style>
